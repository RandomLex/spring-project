<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="john" class="com.barzykin.model.Student">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="John"/>
        <constructor-arg index="2">
            <list>
                <value>7</value>
                <value>8</value>
                <value>9</value>
            </list>
        </constructor-arg>
    </bean>

    <bean id="bob" class="com.barzykin.model.Student">
        <constructor-arg name="id" value="2"/>
        <constructor-arg name="name" value="Bob"/>
        <constructor-arg name="marks">
            <list>
                <value>8</value>
                <value>9</value>
                <value>10</value>
            </list>
        </constructor-arg>
    </bean>

    <bean id="anna" class="com.barzykin.model.Student">
        <property name="id" value="3"/>
        <property name="name" value="Anna"/>
        <property name="marks">
            <list>
                <value>5</value>
                <value>6</value>
                <value>8</value>
            </list>
        </property>
    </bean>

    <bean id="alex" class="com.barzykin.model.Teacher">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="name" value="Alex"/>
        <property name="salary" value="1000"/>
    </bean>


    <bean id="java" class="com.barzykin.model.Group">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="name" value="Java"/>
        <constructor-arg name="teacher" ref="alex"/>
        <property name="students">
            <list>
                <ref bean="john"/>
                <ref bean="bob"/>
                <ref bean="anna"/>
                <bean id="nick" class="com.barzykin.model.Student">
                    <constructor-arg name="id" value="4"/>
                    <constructor-arg name="name" value="Nick"/>
                    <constructor-arg name="marks">
                        <list>
                            <value>8</value>
                            <value>7</value>
                            <value>5</value>
                        </list>
                    </constructor-arg>
                </bean>
            </list>
        </property>
    </bean>

</beans>